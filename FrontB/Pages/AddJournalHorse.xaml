<Page x:Class="FrontB.Pages.AddJournalHorse"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
      xmlns:local="clr-namespace:FrontB.Pages"
      mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="#e8e8e8">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock
                 Foreground="Black" FontFamily="Poppins" FontSize="16"
                 FontWeight="Medium" Text="Hasaba alyş /" Opacity="0.55"
                 Margin="20 10 0 0" Width="100" Height="20"
                 VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <TextBlock 
                Foreground="#007702" FontFamily="Poppins" FontSize="16" 
                FontWeight="UltraBold" Text="Hasaba almak"
                Margin="120 10 0 0" Height="20" Width="120"
                VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </Grid>
        <Grid Grid.Row="1">
            <Border Margin="20 0 20 0" CornerRadius="12" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Background="#e8e8e8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="White" CornerRadius="6" Margin="5">
                            <Viewbox Stretch="Uniform" Grid.Column="1"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center">
                                <Grid Grid.Column="0" Margin="0 0 0 5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Margin="0 0 15 0">
                                            <TextBlock Style="{StaticResource InputTextBlock}"                                      
                                                Text="Lakamy"/>
                                            <Border Style="{StaticResource InputBorderOuter}">
                                                <Border Style="{StaticResource InputBorderInner}">
                                                    <TextBox Style="{StaticResource InputTextBox}"                                                       
                                                        Name="tb_lakamy"/>
                                                </Border>
                                            </Border>
                                        </Grid>
                                        <Grid Grid.Column="1" Margin="0 0 15 0">
                                            <TextBlock Style="{StaticResource InputTextBlock}"                
                                                Text="Doglan ýyly"/>
                                            <Border Style="{StaticResource InputBorderOuter}">
                                                <Border Style="{StaticResource InputBorderInner}">
                                                    <xctk:IntegerUpDown
                                                        Value="0" Minimum="0"   Increment="1"                                                    
                                                        VerticalAlignment="Center"  HorizontalAlignment="Center"
                                                        Width="198" Height="37" Name="tb_doglanyyl"
                                                        Background="Transparent"    Padding="6"
                                                        FontSize="18" BorderThickness="0">
                                                    </xctk:IntegerUpDown>
                                                </Border>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Margin="0 0 15 0" >
                                            <TextBlock Style="{StaticResource InputTextBlock}"
                                                Text="Reňki">
                                            </TextBlock>
                                            <Border Style="{StaticResource InputBorderOuter}">
                                                <Border Style="{StaticResource InputBorderInner}">
                                                    <ComboBox Name="combo_renki" VerticalAlignment="Center"                                                        
                                                        HorizontalAlignment="Center" Width="198"
                                                        Background="Transparent" Height="37"                                          
                                                        Padding="6" FontSize="18" BorderThickness="0"/>
                                                </Border>
                                            </Border>
                                        </Grid>
                                        <Grid Grid.Column="1" Margin="0 0 15 0" >
                                            <TextBlock Style="{StaticResource InputTextBlock}"
                                                Text="Jynsy"/>
                                            <Border Style="{StaticResource InputBorderOuter}">
                                                <Border Style="{StaticResource InputBorderInner}">
                                                    <ComboBox Name="tb_jynsy" VerticalAlignment="Center"                                                              
                                                        HorizontalAlignment="Center" Width="198"
                                                        Background="Transparent" Height="37"                                                
                                                        Padding="6" FontSize="18" BorderThickness="0">
                                                        <ComboBoxItem Content="at"></ComboBoxItem>
                                                        <ComboBoxItem Content="baýtal"></ComboBoxItem>
                                                        <ComboBoxItem Content="näbelli"></ComboBoxItem>
                                                    </ComboBox>
                                                </Border>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Margin="0 0 15 0">
                                            <TextBlock Style="{StaticResource InputTextBlock}"                                            
                                                Text="Atasy"/>
                                            <Border Style="{StaticResource InputBorderOuter}">
                                                <Border Style="{StaticResource InputBorderInner}">
                                                    <TextBox Style="{StaticResource InputTextBox}"
                                                        Name="tb_atasy"/>
                                                </Border>
                                            </Border>
                                        </Grid>
                                        <Grid Grid.Column="1" Margin="0 0 15 0" >
                                            <TextBlock Style="{StaticResource InputTextBlock}"                 
                                                Text="Enesi"/>
                                            <Border Style="{StaticResource InputBorderOuter}">
                                                <Border Style="{StaticResource InputBorderInner}">
                                                    <TextBox Style="{StaticResource InputTextBox}"
                                                        Name="tb_enesi"/>
                                                </Border>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Viewbox>
                        </Border>
                        <Border Grid.Column="1" Background="White" CornerRadius="6" Margin="5">
                            <Viewbox Stretch="Uniform" Grid.Column="1"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center">
                                <Grid Margin="0 0 0 5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Margin="0 0 15 0">
                                            <TextBlock Style="{StaticResource InputTextBlock}"                 
                                                Text="Tertip belgi">
                                            </TextBlock>
                                            <Border Style="{StaticResource InputBorderOuter}">
                                                <Border Style="{StaticResource InputBorderInner}">
                                                    <syncfusion:IntegerTextBox Name="tb_belgi" 
                                                         VerticalAlignment="Center" BorderThickness="0"
                                                         HorizontalAlignment="Center" FontSize="18"
                                                         Width="198" Height="37" IsReadOnly="True"                                                         
                                                         Background="Transparent" Padding="6"/>
                                                </Border>
                                            </Border>
                                        </Grid>
                                        <Grid Grid.Column="1" Margin="0 0 15 0">
                                            <TextBlock Style="{StaticResource InputTextBlock}"                                                                  
                                                 Text="Ykrar hatyň nomeri"/>
                                            <Border Style="{StaticResource InputBorderOuter}">
                                                <Border Style="{StaticResource InputBorderInner}">
                                                    <ComboBox Name="tb_ykrar" VerticalAlignment="Center"                                                        
                                                        HorizontalAlignment="Center" Width="198"
                                                        Background="Transparent" Height="37"
                                                        BorderThickness="0" Padding="6" FontSize="18"                                                         
                                                        SelectionChanged="tb_ykrar_SelectionChanged"/>
                                                </Border>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Margin="0 0 15 0">
                                            <TextBlock Style="{StaticResource InputTextBlock}"               
                                                 Text="Ykrar hatyň senesi"/>
                                            <Border Style="{StaticResource InputBorderOuter}">
                                                <Border Style="{StaticResource InputBorderInner}">
                                                    <DatePicker Name="tb_ysene" FontSize="18"
                                                        VerticalAlignment="Center" HorizontalAlignment="Center"
                                                        Width="198" Height="37" IsEnabled="False" Padding="6"
                                                        Background="Transparent" Language="tk-TM"
                                                        SelectedDateFormat="Short" BorderThickness="0"/>
                                                </Border>
                                            </Border>
                                        </Grid>
                                        <Grid Grid.Column="1" Margin="0 0 15 0">
                                            <TextBlock Style="{StaticResource InputTextBlock}"                 
                                                Text="Prob nomer"/>
                                            <Border Style="{StaticResource InputBorderOuter}">
                                                <Border Style="{StaticResource InputBorderInner}">
                                                    <syncfusion:IntegerTextBox Name="tb_probnomer"
                                                        VerticalAlignment="Center" Width="198"
                                                        HorizontalAlignment="Center" Padding="6"
                                                        Height="37" Background="Transparent"
                                                        FontSize="18" BorderThickness="0"/>
                                                </Border>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid  Grid.Column="0" Margin="0 0 25 0">
                                            <TextBlock Style="{StaticResource InputTextBlockWide}"                 
                                                Text="Biomaterialyň görnüşi"/>
                                            <Border Style="{StaticResource InputBorderOuter}">
                                                <Border Style="{StaticResource InputBorderInner}">
                                                    <ComboBox Name="Combo_biomaterial" Width="198"
                                                        VerticalAlignment="Center" Height="37"
                                                        HorizontalAlignment="Center"  Padding="6"                                        
                                                        Background="Transparent" FontSize="18"                                         
                                                        BorderThickness="0">
                                                        <ComboBoxItem Content="ýok"></ComboBoxItem>
                                                        <ComboBoxItem Content="ýal"></ComboBoxItem>
                                                        <ComboBoxItem Content="gan"></ComboBoxItem>
                                                        <ComboBoxItem Content="süňk"></ComboBoxItem>
                                                    </ComboBox>
                                                </Border>
                                            </Border>
                                        </Grid>
                                        <Grid Grid.Column="1" Margin="0 0 25 0">
                                            <TextBlock Style="{StaticResource InputTextBlock}"
                                                      Margin="10 5 0 0"
                                                 Text="Biomaterialyň sany"/>
                                            <Border Style="{StaticResource InputBorderOuter}">
                                                <Border Style="{StaticResource InputBorderInner}">
                                                    <syncfusion:IntegerTextBox Name="tb_biosan"
                                                        VerticalAlignment="Center" BorderThickness="0"
                                                        HorizontalAlignment="Center" Height="37"
                                                        Background="Transparent" Value="1"                                         
                                                        Padding="6" FontSize="18" Width="198"/>
                                                </Border>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Viewbox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1" Background="#e8e8e8">
                        <Border Grid.Column="0" Background="White" CornerRadius="6" Margin="5">
                            <Viewbox Stretch="Uniform" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Grid Margin="5 0 5 5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Margin="5 0 5 5">
                                        <TextBlock Style="{StaticResource InputTextBlockWide}"                                            
                                            Text="Bedewiň eýesi ýa-da hojalygy"/>
                                        <Border Style="{StaticResource InputBorderOuterWide}">
                                            <Border Style="{StaticResource InputBorderInnerWide}">
                                                <ComboBox Name="tb_doglanYeri" Width="948"
                                                    VerticalAlignment="Center" Height="67"
                                                    HorizontalAlignment="Center" Padding="6"                                       
                                                    Background="Transparent" FontSize="18"                                       
                                                    BorderThickness="0" StaysOpenOnEdit="True"                                                   
                                                    IsTextSearchEnabled="False" IsEditable="True"/>
                                            </Border>
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Row="1" Margin="5">
                                        <TextBlock Style="{StaticResource InputTextBlockWide}"                   
                                            Text="Nyşanlaryň ýazmaça gönüşi"/>
                                        <Border Style="{StaticResource InputBorderOuterWide}">
                                            <Border Style="{StaticResource InputBorderInnerWide}">
                                                <TextBox Style="{StaticResource InputTextBoxWide}"
                                                    Name="tb_nyshanlar"/>
                                            </Border>
                                        </Border>
                                    </Grid>
                                    <Grid Margin="5" Grid.Row="2">
                                        <TextBlock Style="{StaticResource InputTextBlockWide}"
                                            Text="Bellik"/>
                                        <Border Style="{StaticResource InputBorderOuterWide}">
                                            <Border Style="{StaticResource InputBorderInnerWide}">
                                                <TextBox Style="{StaticResource InputTextBoxWide}"
                                                    Name="tb_bellik"/>
                                            </Border>
                                        </Border>
                                    </Grid>
                                    <Button Grid.Row="3" Name="Hasabaalmakbtn"                                           
                                        Style="{StaticResource DefaultButton}"
                                        Margin="10" Width="178" Height="42"
                                        Click="Hasabaalmakbtn_Click" 
                                        Content="+  Ýatda saklamak" />
                                </Grid>
                            </Viewbox>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
