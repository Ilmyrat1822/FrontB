<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- Reusable Filter Border Style -->
    <Style x:Key="FilterBorderOuter" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="38"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="Background" Value="#B1C7FF"/>
    </Style>

    <Style x:Key="FilterBorderOuterWide" TargetType="Border" BasedOn="{StaticResource FilterBorderOuter}">
        <Setter Property="Width" Value="400"/>
    </Style>

    <Style x:Key="FilterBorderInner" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Width" Value="98"/>
        <Setter Property="Height" Value="37"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="#EFF3FD"/>
    </Style>

    <Style x:Key="FilterBorderInnerWide" TargetType="Border" BasedOn="{StaticResource FilterBorderInner}">
        <Setter Property="Width" Value="398"/>
    </Style>

    <!-- Reusable Filter TextBox Style -->
    <Style x:Key="FilterTextBox" TargetType="TextBox">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Width" Value="98"/>
        <Setter Property="Height" Value="37"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">
                        <ScrollViewer x:Name="PART_ContentHost"
                                  VerticalAlignment="Center"
                                  Focusable="false"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Hidden"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FilterTextBoxWide" TargetType="TextBox" BasedOn="{StaticResource FilterTextBox}">
        <Setter Property="Width" Value="398"/>
    </Style>

    <!-- Reusable ComboBox Style -->
    <Style x:Key="FilterComboBox" TargetType="syncfusion:ComboBoxAdv">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Width" Value="98"/>
        <Setter Property="Height" Value="37"/>
        <Setter Property="AllowMultiSelect" Value="True"/>
        <Setter Property="AllowSelectAll" Value="True"/>
        <Setter Property="IsTextSearchEnabled" Value="True"/>
        <Setter Property="AutoCompleteMode" Value="Suggest"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style x:Key="FilterComboBoxWide" TargetType="syncfusion:ComboBoxAdv" BasedOn="{StaticResource FilterComboBox}">
        <Setter Property="Width" Value="398"/>
    </Style>

    <!-- Reusable OK Button Style -->
    <Style x:Key="FilterOKButton" TargetType="Button">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Width" Value="75"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10,0,10"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
        <Setter Property="Background" Value="#00b25d"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Content" Value="OK"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        CornerRadius="6"
                        BorderThickness="1"
                        Background="#00b25d"
                        BorderBrush="#00b25d">
                        <ContentPresenter 
                        x:Name="ButtonContentPresenter"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#00b25d"/>
                            <Setter TargetName="border" Property="TextElement.Foreground" Value="White"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#00b25d"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Reusable DataGrid Text Column Style -->
    <Style x:Key="DataGridTextColumnStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="-30,0,0,0"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <Style x:Key="DataGridTextColumnStyleNoMargin" TargetType="TextBlock" BasedOn="{StaticResource DataGridTextColumnStyle}">
        <Setter Property="Margin" Value="0,0,0,0"/>
        <Setter Property="AllowDrop" Value="True"/>
        <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
    </Style>

    <!-- Reusable Simple Text Column Cell Style -->
    <Style x:Key="SimpleTextColumnCellStyle" TargetType="DataGridCell">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="SimpleTextColumnElementStyle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,20,0"/>
    </Style>  
   <!--Reusable TextBlock-->
    <Style x:Key="DataGridTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>        
        <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
    </Style>
    <!--DNA TextBlock-->
    <Style x:Key="DNAInputTextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="#010101"/>
        <Setter Property="FontFamily" Value="Poppins"/>
        <Setter Property="Margin" Value="60 15 0 0"/>
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="20"/>
    </Style>
    <Style x:Key="DNAInputBorderOuter" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Width" Value="105"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="55,0,0,5"/>
        <Setter Property="Background" Value="#B1C7FF"/>
    </Style>
    <Style x:Key="DNAInputBorderInner" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Width" Value="105"/>
        <Setter Property="Height" Value="49"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="#EFF3FD"/>
    </Style>
    <!--DNA Atinfo-->
    <Style x:Key="DNAInputAtInfo" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="#010101"/>
        <Setter Property="FontFamily" Value="Poppins"/>
        <Setter Property="Margin" Value="15 10 0 0"/>
        <Setter Property="Width" Value="70"/>
        <Setter Property="Height" Value="20"/>
    </Style>
    <Style x:Key="DNAAtInfoBorderOuter" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Width" Value="265"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5,0,0,5"/>
        <Setter Property="Background" Value="#B1C7FF"/>
    </Style>
    <Style x:Key="DNAAtInfoBorderInner" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Width" Value="264"/>
        <Setter Property="Height" Value="47"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="#EFF3FD"/>
    </Style>
    <!--Result Info-->
    <Style x:Key="ResultBorderOuter" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>        
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Background" Value="#B1C7FF"/>
    </Style>
    <Style x:Key="ResultBorderInner" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>        
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>        
        <Setter Property="Background" Value="#EFF3FD"/>
    </Style>
    <Style x:Key="LabDirectorTextBlock" TargetType="TextBlock">
        <Setter Property="Width" Value="70"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Poppins"/>
        <Setter Property="Foreground" Value="#010101"/>
    </Style>
    <Style x:Key="LabBorderOuter" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>       
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>        
        <Setter Property="Background" Value="#B1C7FF"/>
    </Style>
    <Style x:Key="LabBorderInner" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>        
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="#EFF3FD"/>
    </Style>
    <Style x:Key="LabDateBorderOuter" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Width" Value="156"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Margin" Value="10 0 10 0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Background" Value="#B1C7FF"/>
    </Style>
    <Style x:Key="LabDateBorderInner" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Width" Value="155"/>
        <Setter Property="Height" Value="34"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="#EFF3FD"/>
    </Style>
    <Style x:Key="ComBorderOuter" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>        
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="#B1C7FF"/>
    </Style>
    <Style x:Key="ComBorderInner" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>        
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="#EFF3FD"/>
    </Style>

</ResourceDictionary>