            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" CornerRadius="6"                                                        
                        BorderThickness="1" Background="#FF0000"                                                        
                        BorderBrush="#FF0000">
                        <ContentPresenter x:Name="ButtonContentPresenter"
