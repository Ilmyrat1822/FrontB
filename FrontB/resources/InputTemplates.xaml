                             Content="{TemplateBinding SelectionBoxItem}"
                             ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                             Margin="6,0,0,0"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"/>
                                <Path Grid.Column="1"
                           Margin="8,0,8,0"
                           VerticalAlignment="Center"
                           Data="M 0 0 L 4 4 L 8 0 Z"
                           Fill="#666666"/>
                                <ToggleButton Grid.Column="0"
                             Grid.ColumnSpan="2"
