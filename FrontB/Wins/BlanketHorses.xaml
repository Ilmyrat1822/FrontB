<Window x:Class="FrontB.Pages.BlanketHorses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontB.Pages"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Height="800" Width="1500" WindowStyle="None"  
        AllowsTransparency="True" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" Background="Transparent">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/DataGridTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border CornerRadius="29" Margin="5" Background="White">
        <Border CornerRadius="29" Margin="5" Background="White">
            <Border.Effect>
                <DropShadowEffect Direction="270" 
                    ShadowDepth="5" Opacity="0.25"                                   
                    BlurRadius="20" Color="#FF666666"/>
            </Border.Effect>
            <Grid Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.4*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.25*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Image VerticalAlignment="Top" Width="104"
                        HorizontalAlignment="Center" Height="104"                        
                        Margin="0 19 0 0" Source="../Images/Logo.png"/>
                    <Label HorizontalAlignment="Center" FontSize="28"
                        VerticalAlignment="Center" Margin="0 120 0 0" 
                        Foreground="#007602" 
                        FontWeight="Bold" FontFamily="Aclonica"           
                        Content="Ykrar hata degişli atlar"/>
                    <materialDesign:PackIcon Kind="Close"
                        VerticalAlignment="Top" Width="30"
                        HorizontalAlignment="Right" Height="30"          
                        Margin="0 37 41 0" Foreground="#FF0000"/>
                    <Button Name="Closebtn" Click="Closebtn_Click"
                        VerticalAlignment="Top" Width="32"
                        HorizontalAlignment="Right" Height="32"
                        FontFamily="Montserrat" Margin="0 37 41 0"
                        Background="Transparent" Foreground="White"          
                        BorderThickness="0"/>
                </Grid>
                <Border Grid.Row="1" CornerRadius="16" Background="White" Margin="10 0 10 0">
                    <DataGrid x:Name="dataGrid_YkrarhatAtlar" VerticalScrollBarVisibility="Visible"                     
                        AlternationCount="2" IsReadOnly="True" HorizontalScrollBarVisibility="Visible"                            
                        ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                        CellStyle="{DynamicResource DataGridCellStyle1}"                              
                        Style="{DynamicResource DataGridStyle1}"
                        RowStyle="{DynamicResource DataGridRowStyle1}">
                        <DataGrid.Columns>
                            <!-- T/b Column with Filter -->
                            <DataGridTemplateColumn Width="160" MinWidth="120" MaxWidth="400" CanUserResize="True">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Expander Width="150" Name="TB" 
                                            Loaded="Expander_Loaded" 
                                            Background="#F7F8FA"
                                            MouseRightButtonDown="Expander_MouseRightButtonDown">
                                            <Expander.Header>T/b</Expander.Header>
                                            <StackPanel Width="auto">
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <TextBox Style="{StaticResource FilterTextBox}"
                                                            Name="Searchtb" TextChanged="Searchtb_TextChanged"                                                            
                                                            Loaded="SearchTextBox_Loaded"/>
                                                    </Border>
                                                </Border>
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <syncfusion:ComboBoxAdv Style="{StaticResource FilterComboBox}"
                                                            Name="Tbcombo" Loaded="ComboBox_Loaded"                                                            
                                                            SelectionChanged="ComboBox_SelectionChanged"
                                                            ItemsSource="{Binding DataContext.FilterItems, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                                    </Border>
                                                </Border>
                                                <Button Style="{StaticResource FilterOKButton}" 
                                                    Name="OKbtn" Click="OKbtn_Click"/>
                                            </StackPanel>
                                        </Expander>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Style="{StaticResource DataGridTextColumnStyle}" 
                                            Text="{Binding Counter}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="160" MinWidth="120" MaxWidth="400" CanUserResize="True">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Expander Width="150" Name="Lakamy"
                                            Loaded="Expander_Loaded"
                                            Background="#F7F8FA"
                                            MouseRightButtonDown="Expander_MouseRightButtonDown">
                                            <Expander.Header>Lakamy</Expander.Header>
                                            <StackPanel  Width="auto">
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <TextBox Style="{StaticResource FilterTextBox}"
                                                            Name="Searchtb2" TextChanged="Searchtb_TextChanged"                                                            
                                                            Loaded="SearchTextBox_Loaded"/>
                                                    </Border>
                                                </Border>
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <syncfusion:ComboBoxAdv Style="{StaticResource FilterComboBox}"
                                                            Name="Tbcombo2" Loaded="ComboBox_Loaded"                                                            
                                                            SelectionChanged="ComboBox_SelectionChanged"
                                                            ItemsSource= "{Binding DataContext.FilterItems2, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                                    </Border>
                                                </Border>
                                                <Button Style="{StaticResource FilterOKButton}" 
                                                    Name="OKbtn" Click="OKbtn_Click"/>
                                            </StackPanel>
                                        </Expander>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock 
                                            Style="{StaticResource DataGridTextColumnStyle}"
                                            Text="{Binding Lakamy}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="190" MinWidth="120" MaxWidth="300" CanUserResize="True">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Expander Width="170" Name="Doglanyyl"
                                             Loaded="Expander_Loaded"
                                             Background="#F7F8FA"
                                             MouseRightButtonDown="Expander_MouseRightButtonDown">
                                            <Expander.Header>Doglan ýyly</Expander.Header>
                                            <StackPanel  Width="auto">
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <TextBox Style="{StaticResource FilterTextBox}"              
                                                              Name="Searchtb3" TextChanged="Searchtb_TextChanged"                                                              
                                                              Loaded="SearchTextBox_Loaded"/>
                                                    </Border>
                                                </Border>
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <syncfusion:ComboBoxAdv Style="{StaticResource FilterComboBox}"                  
                                                              Name="Tbcombo3" Loaded="ComboBox_Loaded"                                                              
                                                              SelectionChanged="ComboBox_SelectionChanged"
                                                              ItemsSource= "{Binding DataContext.FilterItems3, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                                    </Border>
                                                </Border>
                                                <Button Style="{StaticResource FilterOKButton}"           
                                                     Name="OKbtn" Click="OKbtn_Click"/>
                                            </StackPanel>
                                        </Expander>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                             Style="{StaticResource DataGridTextColumnStyle}"
                                             Text="{Binding Doglanyyl}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="180" MinWidth="120" MaxWidth="400" CanUserResize="True">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Expander Width="150" Name="Atasy"
                                             Loaded="Expander_Loaded"
                                             Background="#F7F8FA"
                                             MouseRightButtonDown="Expander_MouseRightButtonDown">
                                            <Expander.Header>Atasy</Expander.Header>
                                            <StackPanel  Width="auto">
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <TextBox Style="{StaticResource FilterTextBox}"                    
                                                             Name="Searchtb4" TextChanged="Searchtb_TextChanged"                                                             
                                                             Loaded="SearchTextBox_Loaded"/>
                                                    </Border>
                                                </Border>
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <syncfusion:ComboBoxAdv Style="{StaticResource FilterComboBox}"
                                                             Name="Tbcombo4" Loaded="ComboBox_Loaded"                                              
                                                             SelectionChanged="ComboBox_SelectionChanged"
                                                             ItemsSource= "{Binding DataContext.FilterItems4, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                                    </Border>
                                                </Border>
                                                <Button Style="{StaticResource FilterOKButton}"                                               
                                                     Name="OKbtn" Click="OKbtn_Click"/>
                                            </StackPanel>
                                        </Expander>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock 
                                             Style="{StaticResource DataGridTextColumnStyle}"
                                             Text="{Binding Atasy}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="180" MinWidth="120" MaxWidth="400" CanUserResize="True">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Expander Width="150" Name="Enesi"
                                            Loaded="Expander_Loaded"
                                            Background="#F7F8FA"
                                            MouseRightButtonDown="Expander_MouseRightButtonDown">
                                            <Expander.Header>Enesi</Expander.Header>
                                            <StackPanel  Width="auto">
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <TextBox Style="{StaticResource FilterTextBox}"
                                                            Name="Searchtb5" Loaded="SearchTextBox_Loaded"                                                            
                                                            TextChanged="Searchtb_TextChanged"/>
                                                    </Border>
                                                </Border>
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <syncfusion:ComboBoxAdv Style="{StaticResource FilterComboBox}"                   
                                                            Name="Tbcombo5" Loaded="ComboBox_Loaded"                                                            
                                                            SelectionChanged="ComboBox_SelectionChanged"
                                                            ItemsSource= "{Binding DataContext.FilterItems5, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                                    </Border>
                                                </Border>
                                                <Button Style="{StaticResource FilterOKButton}"
                                                    Name="OKbtn" Click="OKbtn_Click"/>
                                            </StackPanel>
                                        </Expander>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Style="{StaticResource DataGridTextColumnStyle}"
                                            Text="{Binding Enesi}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="180" MinWidth="120" MaxWidth="300" CanUserResize="True">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Expander Width="150" Name="Renki"
                                            Loaded="Expander_Loaded"
                                            Background="#F7F8FA"
                                            MouseRightButtonDown="Expander_MouseRightButtonDown">
                                            <Expander.Header>Reňki</Expander.Header>
                                            <StackPanel  Width="auto">
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <TextBox Style="{StaticResource FilterTextBox}"                                                       
                                                            Name="Searchtb6" Loaded="SearchTextBox_Loaded"                                                                                                                  
                                                            TextChanged="Searchtb_TextChanged"/>
                                                    </Border>
                                                </Border>
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <syncfusion:ComboBoxAdv Style="{StaticResource FilterComboBox}"                                                        
                                                            Name="Tbcombo6" Loaded="ComboBox_Loaded"                                                            
                                                            SelectionChanged="ComboBox_SelectionChanged"
                                                            ItemsSource= "{Binding DataContext.FilterItems6, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                                    </Border>
                                                </Border>
                                                <Button Style="{StaticResource FilterOKButton}"
                                                    Name="OKbtn" Click="OKbtn_Click">
                                                </Button>
                                            </StackPanel>
                                        </Expander>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Style="{StaticResource DataGridTextColumnStyle}"
                                            Text="{Binding Renki}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="180" MinWidth="120" MaxWidth="300" CanUserResize="True">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Expander Width="150" Name="Jynsy"
                                            Loaded="Expander_Loaded"
                                            Background="#F7F8FA"
                                            MouseRightButtonDown="Expander_MouseRightButtonDown">
                                            <Expander.Header>Jynsy</Expander.Header>
                                            <StackPanel  Width="auto">
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <TextBox Style="{StaticResource FilterTextBox}"
                                                            Name="Searchtb7" Loaded="SearchTextBox_Loaded"                                                                                                                         
                                                            TextChanged="Searchtb_TextChanged"/>
                                                    </Border>
                                                </Border>
                                                <Border Style="{StaticResource FilterBorderOuter}">
                                                    <Border Style="{StaticResource FilterBorderInner}">
                                                        <syncfusion:ComboBoxAdv Style="{StaticResource FilterComboBox}"                                           
                                                            Name="Tbcombo7" Loaded="ComboBox_Loaded"                                                            
                                                            SelectionChanged="ComboBox_SelectionChanged"
                                                            ItemsSource= "{Binding DataContext.FilterItems6, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                                    </Border>
                                                </Border>
                                                <Button Style="{StaticResource FilterOKButton}"
                                                    Name="OKbtn" Click="OKbtn_Click">
                                                </Button>
                                            </StackPanel>
                                        </Expander>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock 
                                            Style="{StaticResource DataGridTextColumnStyle}"
                                            Text="{Binding Jynsy}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!-- Wider Columns with Filter -->
                            <DataGridTemplateColumn Width="500" MinWidth="200" MaxWidth="800" CanUserResize="True">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Expander Width="490" Name="Eyesi"
                                            Loaded="Expander_Loaded"
                                            Background="#F7F8FA"
                                            MouseRightButtonDown="Expander_MouseRightButtonDown">
                                            <Expander.HeaderTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" 
                                                        HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"
                                                        TextAlignment="Center"
                                                        Width="{Binding RelativeSource={RelativeSource AncestorType=Expander}, Path=ActualWidth}"/>
                                                </DataTemplate>
                                            </Expander.HeaderTemplate>
                                            <Expander.Header>Eýesi we hojalygy</Expander.Header>
                                            <StackPanel  Width="auto">
                                                <Border Style="{StaticResource FilterBorderOuterWide}">
                                                    <Border Style="{StaticResource FilterBorderInnerWide}">
                                                        <TextBox Style="{StaticResource FilterTextBoxWide}"                               
                                                            Name="Searchtb8"
                                                            TextChanged="Searchtb_TextChanged"
                                                            Loaded="SearchTextBox_Loaded"/>
                                                    </Border>
                                                </Border>
                                                <Border Style="{StaticResource FilterBorderOuterWide}">
                                                    <Border Style="{StaticResource FilterBorderInnerWide}">
                                                        <syncfusion:ComboBoxAdv 
                                                            Style="{StaticResource FilterComboBoxWide}"                  
                                                            Name="Tbcombo8"
                                                            Loaded="ComboBox_Loaded"
                                                            SelectionChanged="ComboBox_SelectionChanged"
                                                            ItemsSource= "{Binding FilterItemsSource}"/>
                                                    </Border>
                                                </Border>
                                                <Button Style="{StaticResource FilterOKButton}"
                                                    Name="OKbtn" Click="OKbtn_Click"/>
                                            </StackPanel>
                                        </Expander>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock 
                                            Style="{StaticResource DataGridTextColumnStyle}"                                        
                                            Text="{Binding Eyesi}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
                <Border Grid.Row="2" CornerRadius="0 0 29 29" Background="#F1F1F1"/>
            </Grid>
        </Border>
    </Border>
</Window>