<Window x:Class="FrontB.MainWindow"
        xmlns:Notification="clr-namespace:Syncfusion.Windows.Controls.Notification;assembly=Syncfusion.SfBusyIndicator.WPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"         
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"        
        xmlns:local="clr-namespace:FrontB"
        mc:Ignorable="d" Title="MainWindow" 
        MinHeight="800" MinWidth="1500" ResizeMode="CanResizeWithGrip"
        WindowState="Normal" WindowStyle="None" ShowInTaskbar="True"        
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid MouseDown="Grid_MouseDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid VerticalAlignment="Top" Grid.Row="0"
        Background="#007702" Height="25"              
        HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <materialDesign:PackIcon Kind="CallOutline"
                VerticalAlignment="Center" Width="15"
                HorizontalAlignment="Center" Height="15"
                Foreground="White" Margin="0 0 0 0"/>
                <Label VerticalAlignment="Center" Margin="100 0 0 0"
                FontFamily="Montserrant" Foreground="White"              
                HorizontalAlignment="Center" FontSize="12"            
                Content="+99361 234567"/>
            </Grid>
            <Grid Grid.Column="1">
                <materialDesign:PackIcon Kind="Email" Margin="50 0 0 0"
                VerticalAlignment="Center" Width="15" Height="15" 
                Foreground="White" HorizontalAlignment="Left" />
                <Label VerticalAlignment="Center" HorizontalAlignment="Left" 
                Foreground="White" Margin="70 0 0 0" Grid.Column="1"
                FontFamily="Montserrant" FontSize="12"    
                Content="wpfapplication@gmail.com"/>
            </Grid>
            <Grid Grid.Column="2" Margin="0 0 150 0"                  
            VerticalAlignment="Center" HorizontalAlignment="Right">
                <ComboBox Name="LangCombo" BorderThickness="0" 
                Foreground="Green" Width="45" Height="15"
                Background="White" HorizontalAlignment="Right">
                    <ComboBox.Resources>
                        <Style x:Key="ComboBoxToggleButtonStyle" TargetType="ToggleButton">
                            <Setter Property="OverridesDefaultStyle" Value="True" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Path x:Name="Arrow" Data="M 0 0 L 4 4 L 8 0 Z"
                                                HorizontalAlignment="Right" VerticalAlignment="Center"
                                                Margin="0,0,4,0" Fill="White" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                        <Style x:Key="ComboBoxTextBoxStyle" TargetType="TextBox">
                            <Setter Property="OverridesDefaultStyle" Value="True" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border x:Name="Border" BorderBrush="Gray" 
                                        BorderThickness="1" Background="White">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Resources>
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <ToggleButton Name="ToggleButton"
                                            Style="{StaticResource ComboBoxToggleButtonStyle}"
                                            Grid.Column="2" Focusable="false" ClickMode="Press"
                                            IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"                                                
                                            Background="Green" Foreground="Green" />
                                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False"                                                
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            VerticalAlignment="Center" Margin="3,3,23,3"                                              
                                            HorizontalAlignment="Left"/>
                                            <TextBox x:Name="PART_EditableTextBox" Focusable="True"
                                            Style="{StaticResource ComboBoxTextBoxStyle}"
                                            HorizontalAlignment="Left" Background="White"
                                            VerticalAlignment="Center" Foreground="White"
                                            Margin="3,3,23,3" Visibility="Hidden"                                 
                                            IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                            <Popup Name="Popup" Placement="Bottom"                                                
                                            IsOpen="{TemplateBinding IsDropDownOpen}"
                                            AllowsTransparency="True"
                                            Focusable="False" PopupAnimation="Slide">
                                                <Grid Name="DropDown" SnapsToDevicePixels="True"                                                    
                                                MinWidth="{TemplateBinding ActualWidth}"
                                                MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                    <Border x:Name="DropDownBorder" BorderThickness="1"
                                                    Background="White" BorderBrush="#888">
                                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                            <StackPanel IsItemsHost="True"
                                                            KeyboardNavigation.DirectionalNavigation="Contained" />
                                                        </ScrollViewer>
                                                    </Border>
                                                </Grid>
                                            </Popup>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="HasItems" Value="False">
                                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95" />
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                                            </Trigger>
                                            <Trigger Property="IsGrouping" Value="True">
                                                <Setter Property="ScrollViewer.CanContentScroll" Value="False" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
            </Grid>
            <Grid Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:PackIcon Kind="Minimize" 
                VerticalAlignment="Top" Width="25"
                HorizontalAlignment="Left" Height="25"
                Background="Transparent" Grid.Column="0"
                Foreground="White" BorderBrush="White"  
                FontSize="16"/>
                <Button Name="Minimizebtn" Click="Minimizebtn_Click"
                VerticalAlignment="Top" BorderThickness="0" 
                HorizontalAlignment="Left" Width="25"
                Background="Transparent" Grid.Column="0"
                Foreground="White" Height="25" 
                BorderBrush="White" FontSize="16"/>
                <materialDesign:PackIcon VerticalAlignment="Top"
                HorizontalAlignment="Center" Width="25"
                Kind="Maximize" Grid.Column="1" Height="25"                     
                Background="Transparent" FontSize="16"
                Foreground="White" BorderBrush="White"/>
                <Button Name="Maximizebtn" VerticalAlignment="Top"
                HorizontalAlignment="Center" Grid.Column="1"
                BorderThickness="0" Height="25" Width="25"
                Background="Transparent" FontSize="16"
                BorderBrush="White" Click="Maximizebtn_Click">
                </Button>
                <materialDesign:PackIcon VerticalAlignment="Top" Width="25"
                HorizontalAlignment="Right" Kind="Close" Height="25" 
                Grid.Column="2" Foreground="White" Margin="0 0 0 0"
                Background="Transparent" FontSize="16" BorderBrush="White"/>
                <Button Name="Closebtn" Click="Closebtn_Click" BorderBrush="White"
                HorizontalAlignment="Right" Width="25" Foreground="White"
                VerticalAlignment="Top" BorderThickness="0" Margin="0 0 0 0"  
                Grid.Column="2" Background="Transparent" Height="25"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="7*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0" VerticalAlignment="Top"              
                Stretch="Uniform" HorizontalAlignment="Stretch">
                    <Grid Grid.Row="0" Background="White">
                        <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Stretch" HorizontalAlignment="Stretch">                            
                            <Image VerticalAlignment="Center" Width="100"
                            HorizontalAlignment="Center" Height="100"
                            Margin="10 10 0 0" Source="/Images/Logo.png"/>
                            <Label VerticalAlignment="Top" FontFamily="Aclonica"
                            HorizontalAlignment="Left" Foreground="#007602"
                            FontWeight="Bold" Margin="15 40 0 0"                
                            FontSize="28" Content="Bedew"/>
                        </StackPanel>
                        <Border VerticalAlignment="Top" MinWidth="200" 
                        HorizontalAlignment="Center" Margin="16 120 16 0"                                                                
                        Background="#D8D8D8" Height="2"/>
                    </Grid>
                </Viewbox>
                <Viewbox Grid.Row="1" VerticalAlignment="Top" 
                 Stretch="Uniform" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Vertical">
                        <Expander Width="250" Background="White"  
                        ExpandDirection="Down" Name="Expander1" IsEnabled="True"
                        Expanded="Expander1_Expanded" Collapsed="Expander1_Collapsed">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ViewDashboardOutline" Foreground="Black" 
                                    Name="ExpanderIcon" Width="25" Height="25" Margin="-10,0,0,0"/>
                                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" FontFamily="Montserrat"
                                    HorizontalAlignment="Center" FontSize="16" Text="Hasaba alyş kitaby"/>
                                </StackPanel>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">
                                <Button Background="Transparent" BorderBrush="Transparent" 
                                Height="50" Name="Blanketbtn" Click="Blanketbtn_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileDocumentOutline" Name="Blanketicon"
                                        Foreground="Black" Width="25" Height="25" Margin="-75,0,0,0"/>
                                        <TextBlock VerticalAlignment="Center"  Text="Ykrar hatlar" Name="Ykrarhatlar"
                                        HorizontalAlignment="Left" Foreground="Black" Margin="-40,0,0,0" FontSize="14"/>
                                    </StackPanel>
                                </Button>
                                <Button Background="Transparent" BorderBrush="Transparent" 
                                Height="50" Name="Hasabaalmakbtn" Click="Hasabaalmakbtn_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ArrowDownBoldBoxOutline" Foreground="Black" 
                                        Name="HasabaalmakIcon" Width="25" Height="25" Margin="-55,0,0,0"/>
                                        <TextBlock VerticalAlignment="Center"  Foreground="Black" Name="Hasabalmak"
                                        HorizontalAlignment="Left" Margin="-20,0,0,0" FontSize="14" Text="Hasaba almak"/>
                                    </StackPanel>
                                </Button>
                                <Button Background="Transparent" BorderBrush="Transparent" 
                                Height="50" Name="Ahliatlarbtn" Click="Ahliatlarbtn_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Horse" Name="AhliatlarIcon" 
                                        Foreground="Black" Width="25" Height="25" Margin="-80,0,0,0"/>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Black" 
                                        Margin="-45,0,0,0" FontSize="14" Name="Ahliatlar" Text="Ähli atlar"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Expander>
                        <!-- Second Expander -->
                        <Expander Width="250" Name="Expander2" ExpandDirection="Down" Background="White" IsEnabled="True"
                              Expanded="Expander2_Expanded" Collapsed="Expander2_Collapsed">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FlaskOutline" Foreground="Black" 
                                    Name="ExpanderIcon2" Width="25" Height="25" Margin="-10,0,0,0"/>
                                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"
                                    FontSize="16" FontFamily="Montserrat" Text="Barlaghana"/>
                                </StackPanel>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">
                                <!-- Repeated Content in Expander2 -->
                                <Button Background="Transparent" BorderBrush="Transparent" 
                                Height="50" Name="DNKbtn" Click="DNKbtn_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Dna" Name="DNKIcon" Height="25"
                                        Foreground="Black" Width="25" Margin="-10,0,0,0"/>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Black" 
                                        Margin="10,0,0,0" FontSize="14" Name="DNK" Text="DNK-a kody girizmek"/>
                                    </StackPanel>
                                </Button>
                                <Button Background="Transparent" BorderBrush="Transparent" 
                                Height="50" Name="Bazabtn" Click="Bazabtn_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Database" Name="BazaIcon" Foreground="Black" 
                                        Width="25" Height="25" HorizontalAlignment="Left" Margin="-90,0,0,0"/>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="Baza"
                                        Foreground="Black" Margin="-55,0,0,0" FontSize="14" Name="Garysyk"/>
                                    </StackPanel>
                                </Button>
                                <Button Background="Transparent" BorderBrush="Transparent" 
                                Height="50" Name="Konebtn" Click="Konebtn_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Calendar" Name="KoneIcon" 
                                        Foreground="Black" Width="25" Height="25" Margin="-80,0,0,0"/>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Name="Kone"
                                        Foreground="Black" Margin="-45,0,0,0" FontSize="14" Text="Köne baza"/>
                                    </StackPanel>
                                </Button>
                                <Button Background="Transparent" BorderBrush="Transparent" 
                                Height="50" Name="Tazebtn" Click="Tazebtn_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CalendarMinus" Name="TazeIcon" 
                                        Foreground="Black" Width="25" Height="25" Margin="-85,0,0,0"/>
                                        <TextBlock VerticalAlignment="Center" Text="Täze baza" Margin="-50,0,0,0"   
                                        HorizontalAlignment="Left" Name="Taze" Foreground="Black" FontSize="14" />
                                    </StackPanel>
                                </Button>
                                <Button Background="Transparent" BorderBrush="Transparent" 
                                Height="50" Name="Karantinbtn" Click="Karantinbtn_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="VirusOutline" Name="KarantinIcon" 
                                        Foreground="Black" Width="25" Height="25" Margin="-85,0,0,0"/>
                                        <TextBlock VerticalAlignment="Center"  Foreground="Black" FontSize="14"
                                        HorizontalAlignment="Left" Margin="-50,0,0,0" Name="Karantin" Text="Karantin"/>
                                    </StackPanel>
                                </Button>                              
                            </StackPanel>
                        </Expander>
                        <!-- Third Expander -->
                        <Expander Width="250" Name="Expander3" ExpandDirection="Down" Background="White" 
                        IsEnabled="True" Expanded="Expander3_Expanded" Collapsed="Expander3_Collapsed">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Equaliser" Name="ExpanderIcon3" 
                                    Foreground="Black" Width="25" Height="25" Margin="-10,0,0,0"/>
                                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Text="Hasabat"
                                    HorizontalAlignment="Center" FontSize="16" FontFamily="Montserrat"/>
                                </StackPanel>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">
                                <Button Background="Transparent" BorderBrush="Transparent" 
                                Height="50" Name="Dernewbtn" Click="Dernewbtn_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Equaliser" Name="DernewIcon" 
                                        Foreground="Black" Width="25" Height="25" Margin="-90,0,0,0"/>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="Derňew"
                                        Foreground="Black" Margin="-55,0,0,0" FontSize="14" Name="Dernewtb"/>
                                    </StackPanel>
                                </Button>
                                <Button Background="Transparent" BorderBrush="Transparent" 
                                    Height="50" Name="Hasabatbtn" Click="Hasabatbtn_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Mailbox" Name="HasabatIcon" 
                                        Foreground="Black" Width="25" Height="25" Margin="-40,0,0,0"/>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="Hasabat bermek"
                                        Foreground="Black" Margin="-10,0,0,0" FontSize="14" Name="Hasabat"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Expander>
                        <Expander Width="250" Name="Expander4" ExpandDirection="Down" Background="White" 
                        IsEnabled="True" Expanded="Expander4_Expanded" Collapsed="Expander4_Collapsed">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="SettingsOutline" Name="ExpanderIcon4" 
                                    Foreground="Black" Width="25" Height="25" Margin="-10,0,0,0"/>
                                    <TextBlock Margin="10,0,0,0"  FontFamily="Montserrat" FontSize="16"
                                    VerticalAlignment="Center" HorizontalAlignment="Center" Text="Sazlamalar"/>
                                </StackPanel>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">
                                <!-- Repeated Content in Expander3 -->
                                <Button Background="Transparent" BorderBrush="Transparent"  
                                Name="Ulanyjylarbtn" Click="Ulanyjylarbtn_Click" Height="50">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountOutline" Name="UlanyjylarIcon" 
                                        Foreground="Black" Width="25" Height="25" Margin="10,0,0,0"/>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Black" 
                                        Margin="10,0,0,0" FontSize="14" Name="ulanyjylar" Text="Ulanyjylary dolandyrmak"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Viewbox>
                <StackPanel Grid.Row="2" Orientation="Vertical" 
                HorizontalAlignment="Stretch" Margin="0 0 0 10"
                VerticalAlignment="Bottom">
                    <Button Name="LogoutBtn" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" BorderThickness="1"
                    Background="Transparent" Height="50"                        
                    BorderBrush="#e8e8e8" Click="LogoutBtn_Click">
                        <StackPanel Orientation="Horizontal"                                                                
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                            <materialDesign:PackIcon Kind="ExitToApp"                                  
                            Foreground="Black" Height="25"
                            Width="25" Margin="0,0,20,0"/>
                            <TextBlock VerticalAlignment="Center" Foreground="Black"                                
                            HorizontalAlignment="Left" Margin="10,0,20,0"                     
                            FontSize="14" Text="Çykmak"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <Grid Name="Esas" Grid.Row="1" VerticalAlignment="Stretch"                    
                HorizontalAlignment="Stretch" Background="#e8e8e8">
                    <Frame Name="Main"                         
                    Navigated="Main_Navigated" 
                    NavigationUIVisibility="Hidden"/>                             
                    <Border x:Name="LoadingPanel" Visibility="Collapsed" Background="#000A1B3E" Panel.ZIndex="1" Grid.RowSpan="4">
                        <Notification:SfBusyIndicator x:Name="loader" IsBusy="True" AnimationType="Delete" 
                            Margin="0 0 325 0" AnimationSpeed="100" ViewboxHeight="50" ViewboxWidth= "50" Foreground="#FF051679">
                            <Notification:SfBusyIndicator.HeaderTemplate>
                                <DataTemplate >
                                    <TextBlock Text="Garaşyň" TextAlignment="Center" FontSize="16" 
                                        FontWeight="Bold" Width="auto" Margin="0 10 0 0 " Foreground="#FF051679" />
                                </DataTemplate>
                            </Notification:SfBusyIndicator.HeaderTemplate>
                        </Notification:SfBusyIndicator>
                    </Border>                  
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
